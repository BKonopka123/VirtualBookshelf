<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="#FFF6F2"
    android:id="@+id/item_bookshelf">

    <!--Book Icon-->
    <ImageView
        android:id="@+id/book_image_item_bookshelf"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"/>

    <!--Book author -->
    <TextView
        android:id="@+id/book_author_item_bookshelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#BA8B7C"
        android:fontFamily="@font/neuton_regular"
        android:layout_gravity="center"/>

    <!--Pause-->
    <TextView
        android:id="@+id/pause_item_bookshelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#BA8B7C"
        android:fontFamily="@font/neuton_regular"
        android:text="-"
        android:layout_gravity="center"/>

    <!--Book Title-->
    <TextView
        android:id="@+id/book_title_item_bookshelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#BA8B7C"
        android:fontFamily="@font/neuton_regular"
        android:layout_gravity="center"/>

    <!--Filler-->
    <View
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_weight="1" />

    <!--Status Image-->
    <ImageView
        android:id="@+id/status_image_item_bookshelf"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center" />
</LinearLayout>